@model List<FirstChallenge.Models.ComicBook> 

@{
    ViewBag.Title = "My Comics";    @* Title of web page *@
}

<h2>My Comics</h2>

@* This is repeated for all of the comic books, so put in foreach loop *@
@foreach (var comic in Model)
{
    <h3>@Html.ActionLink(comic.ComicTitle, "Detail", new { id = comic.ComicBookId })</h3>   @* Creating a link to the associated comic                                                                                          book id*@
    <h4>#@comic.EpisodeNumber - @comic.EpisodeTitle</h4>

    var characters = comic.Characters.Select(p => p.Name).ToArray();    // Creates array of strings with only names of characters
    var characterString = String.Join(", ", characters);    // If more than 1 character, join them with a ", "
    <p><strong>Starring: </strong> @characterString</p>
}
